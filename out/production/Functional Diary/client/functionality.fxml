<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<BorderPane fx:id="fBorderPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.FuncController"
            prefHeight="400.0" prefWidth="600.0">

    <top>

    </top>

    <left>
        <HBox spacing="5">
            <VBox styleClass="DataList" spacing="2">
                <Label styleClass="LabelSize14NoPadding" text="Count"/>
                <Label fx:id="neutralCount" />
                <Label fx:id="goodCount" />
                <Label fx:id="excitingCount" />
                <Label fx:id="mindfulCount" />
                <Label fx:id="surprisingCount" />
                <Label fx:id="productiveCount" />
                <Label fx:id="boringCount" />
                <Label fx:id="badCount" />
                <Label fx:id="lonelyCount" />
                <Label fx:id="sadCount" />
                <Label fx:id="scaryCount" />
                <Label fx:id="stressfulCount" />
            </VBox>
            <VBox styleClass="DataList" spacing="2">
                <Label styleClass="LabelSize14NoPadding" text="Day Type" />
                <Label fx:id="neutralDaysLabel" text="Neutral days:" />
                <Label fx:id="goodDaysLabel" text="Good days:" />
                <Label fx:id="excitingDaysLabel" text="Exciting days:" />
                <Label fx:id="mindfulDaysLabel" text="Mindful days:" />
                <Label fx:id="surprisingDaysLabel" text="Surprising days:" />
                <Label fx:id="productiveDaysLabel" text="Productive days:" />
                <Label fx:id="boringDaysLabel" text="Boring days:" />
                <Label fx:id="badDaysLabel" text="Bad days:" />
                <Label fx:id="lonelyDaysLabel" text="Lonely days:" />
                <Label fx:id="sadDaysLabel" text="Sad days:" />
                <Label fx:id="scaryDaysLabel" text="Scary days:" />
                <Label fx:id="stressfulDaysLabel" text="Stressful days:" />
            </VBox>
            <VBox styleClass="DataList" spacing="2">
                <Label styleClass="LabelSize14NoPadding" text="Average:" />
                <Label fx:id="neutralAvg"/>
                <Label fx:id="goodAvg"/>
                <Label fx:id="excitingAvg"/>
                <Label fx:id="mindfulAvg"/>
                <Label fx:id="surprisingAvg"/>
                <Label fx:id="productiveAvg"/>
                <Label fx:id="boringAvg"/>
                <Label fx:id="badAvg"/>
                <Label fx:id="lonelyAvg"/>
                <Label fx:id="sadAvg"/>
                <Label fx:id="scaryAvg"/>
                <Label fx:id="stressfulAvg"/>
            </VBox>
        </HBox>
    </left>

    <center>
        <BorderPane>
            <top>
                <HBox>
                    <TextField fx:id="chartYearField" promptText="Enter year..." onKeyTyped="#validateNumbers" />
                    <Button text="Update" onAction="#createMonthAverageAxis" />
                </HBox>
            </top>
            <center>
                <Group fx:id="lineChartContainer">
                </Group>
            </center>
        </BorderPane>
    </center>

    <right>

    </right>

    <bottom>

    </bottom>

</BorderPane>

